{% extends 'base.html.twig' %}

{% block title %}Log in! {% endblock %}

{% block body %}
    <div class="container">
    <div class="row content">
    <div class="col-md-6 mb-3">
    <!--img src="image.jpg" class="img-fluid" alt="image"-->
    <img class="img-fluid" src="{{ asset('assets/images/image.jpg') }}" alt="image">
    </div>
    <div class="clo-md-6 change">
            <form method="post">
                  <h1 class="mt-5 mb-3 text-center">Please sign in</h1>
                 <p class="mb-3 text-center text-muted"> Sign in to discuss with your friends </p>
                {% if error %}
                    <div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <div class="d-flex justify-content-between">
                    <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" name="_remember_me">
                            <label class="form-check-label" for="remember_me">Remember me</label>
                    </div>
                    <a href="#">Forgot Password?</a>
                </div>
                <button class="btn btn-lg btn-block btn-primary" type="submit">
                    Sign in
                </button>

                <p class="mt-5 mb-3 text-center text-muted"> Not registered yet?
                    <a href="#"> Create an account</a>
                </p>
            </form>
       </div>
    </div>
    </div>

{% endblock %}
